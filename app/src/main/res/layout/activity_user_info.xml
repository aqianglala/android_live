<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/me_bg_gray"
        android:orientation="vertical"
        >

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="403px"
            android:orientation="vertical"
            >

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_follow_fans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <View
                    style="@style/line_style"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:id="@+id/tv_flow"
                        style="@style/black_16sp_font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="25px"
                        android:text="关注 0"/>

                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="25px"
                        android:layout_marginTop="25px"
                        android:background="#000000"/>

                    <TextView
                        android:id="@+id/tv_fans"
                        style="@style/black_16sp_font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="25px"
                        android:text="粉丝 0"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    style="@style/line_style"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_follow_fans"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20px">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:src="@drawable/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/black_16sp_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="123456789"/>

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                style="@style/me_item_style">

                <TextView
                    style="@style/gray_16sp_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/line_style"/>

            <com.zhy.autolayout.AutoLinearLayout
                style="@style/me_item_style">

                <TextView
                    style="@style/gray_16sp_font"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:text="ID"/>

                <TextView
                    android:id="@+id/tv_id"
                    style="@style/black_16sp_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="104218521"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/line_style"/>

            <com.zhy.autolayout.AutoLinearLayout
                style="@style/me_item_style">

                <TextView
                    style="@style/gray_16sp_font"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:text="等级"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/line_style"/>

            <com.zhy.autolayout.AutoLinearLayout
                style="@style/me_item_style">

                <TextView
                    style="@style/gray_16sp_font"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:text="地区"/>

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/black_16sp_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="瓦努阿图"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/line_style"/>

            <com.zhy.autolayout.AutoLinearLayout
                style="@style/me_item_style">

                <TextView
                    style="@style/gray_16sp_font"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:text="学校"/>

                <TextView
                    android:id="@+id/tv_school"
                    style="@style/black_16sp_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="火星大学"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/line_style"/>

            <com.zhy.autolayout.AutoLinearLayout
                style="@style/me_item_style">

                <TextView
                    style="@style/gray_16sp_font"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:text="简介"/>

                <TextView
                    android:id="@+id/tv_summary"
                    style="@style/black_16sp_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自我介绍太单调，不如来好好聊~~~"/>
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</layout>