<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/me_bg_gray"
        android:orientation="vertical"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="403px"
            android:orientation="vertical"
            >

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_user_message"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="20px">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="128px"
                    android:layout_height="128px"
                    android:layout_marginRight="20px"
                    android:src="@drawable/ic_launcher"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/black_16sp_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20px"
                        android:text="123456789"/>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/black_16sp_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID:"/>

                        <TextView
                            android:id="@+id/tv_id"
                            style="@style/black_16sp_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123456789"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrows_right"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/line_style"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_flow"
                    style="@style/black_16sp_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="25px"
                    android:text="关注 0"/>

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25px"
                    android:layout_marginTop="25px"
                    android:background="#000000"/>

                <TextView
                    android:id="@+id/tv_fans"
                    style="@style/black_16sp_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="25px"
                    android:text="粉丝 0"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/line_style"/>


        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_login_visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/item_margin"
            android:orientation="vertical">

            <View
                style="@style/line_style"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_buy"
                style="@style/me_item_style">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/ic_launcher"/>

                <TextView
                    style="@style/black_16sp_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:text="麦粒:"/>

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/black_16sp_font"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="26"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/item_margin"
                    android:drawableRight="@mipmap/arrows_right"
                    android:text="购买"
                    android:textSize="16sp"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/line_style"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_recharge"
                style="@style/me_item_style">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/ic_launcher"/>

                <TextView
                    style="@style/black_16sp_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:text="秀币:"/>

                <TextView
                    android:id="@+id/tv_xiubi"
                    style="@style/black_16sp_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="钱包空空"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/item_margin"
                    android:drawableRight="@mipmap/arrows_right"
                    android:text="充值"
                    android:textSize="16sp"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/line_style"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_message"
                style="@style/me_item_style">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/ic_launcher"/>

                <TextView
                    style="@style/black_16sp_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="我的私信:"/>


                <TextView
                    android:id="@+id/tv_private_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/item_margin"
                    android:drawableRight="@mipmap/arrows_right"
                    android:text="1"
                    android:textSize="16sp"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/line_style"/>

        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/item_margin"
            android:orientation="vertical">

            <View
                style="@style/line_style"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_history"
                style="@style/me_item_style">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/ic_launcher"/>

                <TextView
                    style="@style/black_16sp_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="观看历史:"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrows_right"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                style="@style/line_style"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_setting"
                style="@style/me_item_style">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/ic_launcher"/>

                <TextView
                    style="@style/black_16sp_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="设置:"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrows_right"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            style="@style/line_style"/>
    </com.zhy.autolayout.AutoLinearLayout>
</layout>